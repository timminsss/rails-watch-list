<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(cinema_banner.jpeg);">
  <div class="container">
    <h1>My Movie Lists</h1>
  </div>
</div>


<div class="container">


<div class="row justify-center-between">
  <% @lists.each do |list| %>
    <div class="col-3 card border p-3 m-2">
      <%= link_to list.name, list_path(list) %>
    </div>
    <% end %>
</div>

<div>
  <%= link_to new_list_path, class: "btn btn-primary" do %>
    <span>Create a movie list</span>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</div>

</div>
